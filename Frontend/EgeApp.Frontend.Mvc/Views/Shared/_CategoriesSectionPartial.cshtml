<!-- Categories Section Begin -->
<section class="categories">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 p-0">
                <div class="categories__item categories__large__item set-bg"
                    data-setbg="ui/img/categories/category-1.jpg">
                    <div class="categories__text">
                        <h1>@Model.CategoryList[0].Name</h1>
                        <p>@Model.CategoryList[0].Description</p>
                        <a href="#">Shop now</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="row">
                    @for(int i=1; i<5;i++)
                    {
                        <div class="col-lg-6 col-md-6 col-sm-6 p-0">
                            <div class="categories__item set-bg" data-setbg="@($"ui/img/categories/category-{Model.CategoryList[i].Id}.jpg")">
                                <div class="categories__text">
                                    <h4>@Model.CategoryList[i].Name</h4>
                                    <p>@Model.CategoryList[i].ProductCount ürün</p>
                                    <a href="#">Shop now</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Categories Section End -->