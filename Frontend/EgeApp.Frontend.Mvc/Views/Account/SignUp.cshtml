@model EgeApp.Frontend.Mvc.Models.Identity.SignUpViewModel

<div class="container-fluid contact py-5">
    <div class="container py-5">
        <div class="p-5 bg-light rounded">
            <h3 class="text-center mb-4">Kayıt Ol</h3>
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <form asp-area="" asp-controller="Account" asp-action="SignUp" method="post">
                        <div class="form-group mb-3">
                            <input asp-for="FirstName" class="form-control border-0 py-3" placeholder="Ad" />
                            <span class="text-danger" asp-validation-for="FirstName"></span>
                        </div>
                        <div class="form-group mb-3">
                            <input asp-for="LastName" class="form-control border-0 py-3" placeholder="Soyad" />
                            <span class="text-danger" asp-validation-for="LastName"></span>
                        </div>
                        <div class="form-group mb-3">
                            <input asp-for="UserName" class="form-control border-0 py-3" placeholder="Kullanıcı Adı" />
                            <span class="text-danger" asp-validation-for="UserName"></span>
                        </div>
                        <div class="form-group mb-3">
                            <input asp-for="Email" class="form-control border-0 py-3" placeholder="Email" />
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group mb-3">
                            <input asp-for="Password" class="form-control border-0 py-3" type="password"
                                placeholder="Parola" />
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group mb-3">
                            <input asp-for="RePassword" class="form-control border-0 py-3" type="password"
                                placeholder="Parola Tekrar" />
                            <span class="text-danger" asp-validation-for="RePassword"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 py-2">Kayıt Ol</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
